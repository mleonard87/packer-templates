{
  "variables": {
    "iso_url": "http://mirrors.dotsrc.org/oracle-linux/OL6/U5/x86_64/OracleLinux-R6-U5-Server-x86_64-dvd.iso",
    "iso_checksum": "a65041fbe0ba67e3ff6f5f93804a8f47d5b5f132"
  },
  "builders": [{
    "type": "virtualbox-iso",
    "vm_name": "oracle65-uek",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg hostname=oracle-uek-65-x64.vagrantup.com<enter><wait>"
    ],
    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "virtualbox_version_file": ".vbox_version",
    "guest_os_type": "Oracle_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "disk_size": 20480,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  }],
  "provisioners": [{
    "type": "shell",
    "environment_vars": [
      "UEK=yes"
    ],
    "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S sh '{{.Path}}'",
    "scripts": [
      "scripts/base.sh",
      "scripts/vagrant.sh",
      "scripts/sshd.sh",
      "scripts/virtualbox.sh",
      "scripts/puppet.sh",
      "scripts/chef.sh",
      "scripts/cleanup.sh",
      "scripts/zerodisk.sh"
    ]
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": false,
    "output": "../../{{.Provider}}/oracle-uek-65-x64.box"
  }]
}
